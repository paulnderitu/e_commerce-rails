<%= render "layouts/errors", :object => @category %>

  <%= form_for @category do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    Select Companies:
    <%= f.select(:brand_id) do %>
    <% Brand.all.each do |brand| %>
      <%= content_tag(:option, brand.title, value: brand.id) %>
    <% end %>
  <% end %>
    <%= f.submit %>
  <% end %>
