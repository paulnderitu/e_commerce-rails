<% if @order_goods.any? %>
    <% @order_goods.each do |good| %>
      <p><%= good.product.item %> | <%= link_to "Delete", order_good_path(good), :data => {:confirm => "You sure?", :method => "delete"} %></p>
      <p> Unit Price: <%= number_to_currency good.product.price %> | Quantity: <%= good.quantity %> | Total Price: <%= number_to_currency (good.product.price * good.quantity) %></p>
    <% end %>
    <p>Your Total: <%= number_to_currency current_order.total_price %></p>
  <% else %>
    <p>Your shopping cart is empty.</p>
  <% end %>
  
