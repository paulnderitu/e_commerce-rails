<%= render "layouts/errors", :object => @brand %>

  <%= form_for @brand, remote: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :link %>
    <%= f.text_field :link %>
    <br>
    <%= f.file_field :avatar %>

    <%= f.select(:category_id) do %>
  <% Category.all.each do |category| %>
    <%= content_tag(:option, category.name, value: category.id) %>
  <% end %>
<% end %>
    <%= f.submit %>
  <% end %>
